@model QuotationSystem.Models.User.UserViewModel
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="User" asp-action="AddUser" method="post">
                <div class="form-group">
                    <label asp-for="User.UserId" class="control-label"></label>
                    <input asp-for="User.UserId" class="form-control" />
                    <span asp-validation-for="User.UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>