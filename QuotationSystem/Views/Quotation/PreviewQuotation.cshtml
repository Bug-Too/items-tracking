@{
    Layout = null;
}
@model QuotationSystem.Models.Quotation.PreviewQuotationViewModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
    <div class="d-flex flex-column" style="gap:1rem;">
        <!--Logo-->
        <div class="d-flex align-items-center">
            <img style="width: 300px; height: 200px;" alt="" class="img-circle" src="data:image/png;base64,@Model.CompanyLogo">
            <h4>Hello Universe</h4>
        </div>
        <div class="row" style="gap: 5rem;">
            <div class="col">

                <!--Address-->
                <div class="d-flex flex-column my-5">
                    <p>@Model.CompanyAddress</p>
                    <div class="row">
                        <div class="col-2">Tax</div>
                        <div class="col">@Model.CompanyTaxId</div>
                    </div>

                    <div class="row">
                        <div class="col-2">Contact</div>
                        <div class="col">@Model.CompanyContact</div>
                    </div>
                </div>

                <!--Client-->
                <div class="d-flex flex-column mb-5">
                    <h5>Client</h5>
                    <hr class="m-0"/>
                    <p>Good morning j Shinawatra Tower 3 Building 10th Floor, Vibhavadi Rangsit Road, Chatuchak, Chatuchak, Bangkok 10900</p>
                    <div class="row">
                        <div class="col-2">Tax</div>
                        <div class="col">@Model.Quotation.TaxId</div>
                    </div>

                    <div class="row">
                        <div class="col-2">Contact</div>
                        <div class="col">@Model.Quotation.CustomerContact</div>
                    </div>
                </div>
            </div>

            <div class="col">
                <h3 class="text-center">Quotation</h3>
                <hr />
                <div class="my-3">
                    <div class="row">
                        <h6 class="col-3">Document No.</h6>
                        <div class="col">@Model.Quotation.QuotationNo</div>
                    </div>
                    <div class="row">
                        <h6 class="col-3">Date</h6>
                        <div class="col">@Model.Quotation.QuotationDate.ToShortDateString()</div>
                    </div>
                    <div class="row">
                        <h6 class="col-3">Seller</h6>
                        <div class="col">@Model.Quotation.Seller</div>
                    </div>
                </div>
                <hr />
            </div>
        </div>

        <!--table-->
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th>Qty</th>
                    <th>Unit</th>
                    <th>Unit Price</th>
                    <th>Discount</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                    foreach (var item in Model.Quotation.TQuotationDetails)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.ItemCodeNavigation.ItemDesc</td>
                            <td>@item.ItemQty</td>
                            <td>@item.ItemCodeNavigation.UnitId</td>
                            <td>@item.ItemCodeNavigation.UnitPrice</td>
                            <td>@item.DiscountPercent</td>
                            <td>1000000</td>
                        </tr>
                        index++;
                    }
                  }
                <tr>
                    <td>1</td>
                    <td>CASE-751933-00 M23-00166CASE</td>
                    <td>10</td>
                    <td>pcs</td>
                    <td>1,500,000</td>
                    <td>15%</td>
                    <td>1,275,000</td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>PLATE, BAC-17D706-01 M23-00167PLATE, BLACK</td>
                    <td>1</td>
                    <td>pcs</td>
                    <td>1,600,000</td>
                    <td>0</td>
                    <td>1,600,000</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>